generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int      // price in minor units (e.g., pence)
  currency    String   @default("GBP")
  image       String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
}
